
<div class="container">
  <h2><%= @post.name %></h2>
  <% if @post.avatar.exists? %>
  <%= image_tag "#{@post.avatar}" %>
  <% end %>
  <h4><%= @post.title %></h4>
   <br>
  <br>
  <% if current_user.try(:admin?) %>
  <p><%= link_to "Edit Post", edit_post_path(@post) %></p>
  <p><%= link_to "Delete Post", post_path(@post), :data => {:confirm => "You sure?", :method => "delete"} %></p>
  <% end %>

  <h3>Comments:</h3>
  <p><%= link_to "Add Comment", new_post_comment_path(@post) %></p>
  <% @post.comments.each do |comment| %>
        <h4> "<%= comment.content %>" </h4>

      <% if current_user.try(:admin?) %>
      <p><%= link_to "Delete Comment", post_comment_path(@post, comment), :data => {:confirm => "You sure?", :method => "delete"} %></p>
      <% end %>
      <br>
<% end %>
</div>
