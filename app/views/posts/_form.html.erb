<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>
  <%= f.label :image  %>
  <br>
  <%= f.file_field :avatar %>
  <br>
  <div class="button">
    <%= f.submit  %>
  </div>
<% end %>
